{
  "content_type": {
    "title": "Blog Post",
    "uid": "blog_post",
    "schema": [
      {
        "display_name": "Title",
        "uid": "title",
        "data_type": "text",
        "mandatory": true,
        "unique": false,
        "field_metadata": {
          "description": "Blog post title",
          "default_value": ""
        }
      },
      {
        "display_name": "Slug",
        "uid": "slug",
        "data_type": "text",
        "mandatory": true,
        "unique": true,
        "field_metadata": {
          "description": "URL-friendly slug",
          "default_value": ""
        }
      },
      {
        "display_name": "Excerpt",
        "uid": "excerpt",
        "data_type": "text",
        "mandatory": true,
        "field_metadata": {
          "description": "Short description of the blog post",
          "default_value": "",
          "multiline": true
        }
      },
      {
        "display_name": "Content",
        "uid": "content",
        "data_type": "rich_text_editor",
        "mandatory": true,
        "field_metadata": {
          "description": "Full blog post content"
        }
      },
      {
        "display_name": "Category",
        "uid": "category",
        "data_type": "text",
        "mandatory": true,
        "field_metadata": {
          "description": "Blog post category"
        },
        "enum": {
          "advanced": false,
          "choices": [
            {
              "value": "AI"
            },
            {
              "value": "Generative AI"
            },
            {
              "value": "ChatGPT"
            },
            {
              "value": "Gemini"
            }
          ]
        }
      },
      {
        "display_name": "Author",
        "uid": "author",
        "data_type": "reference",
        "mandatory": false,
        "reference_to": ["author"],
        "field_metadata": {
          "description": "Author of the blog post"
        }
      },
      {
        "display_name": "Featured Image",
        "uid": "featured_image",
        "data_type": "file",
        "mandatory": false,
        "field_metadata": {
          "description": "Featured image for the blog post"
        }
      },
      {
        "display_name": "Tags",
        "uid": "tags",
        "data_type": "tags",
        "mandatory": false,
        "field_metadata": {
          "description": "Tags for categorization and search"
        }
      },
      {
        "display_name": "Published Date",
        "uid": "published_date",
        "data_type": "isodate",
        "mandatory": true,
        "field_metadata": {
          "description": "Publication date"
        }
      },
      {
        "display_name": "SEO Metadata",
        "uid": "seo_metadata",
        "data_type": "group",
        "mandatory": false,
        "schema": [
          {
            "display_name": "Meta Title",
            "uid": "meta_title",
            "data_type": "text",
            "field_metadata": {
              "description": "SEO meta title"
            }
          },
          {
            "display_name": "Meta Description",
            "uid": "meta_description",
            "data_type": "text",
            "field_metadata": {
              "description": "SEO meta description",
              "multiline": true
            }
          },
          {
            "display_name": "Meta Keywords",
            "uid": "meta_keywords",
            "data_type": "tags",
            "field_metadata": {
              "description": "SEO keywords"
            }
          }
        ]
      },
      {
        "display_name": "Status",
        "uid": "status",
        "data_type": "text",
        "mandatory": true,
        "field_metadata": {
          "description": "Publication status"
        },
        "enum": {
          "advanced": false,
          "choices": [
            {
              "value": "Draft"
            },
            {
              "value": "Review"
            },
            {
              "value": "Published"
            }
          ]
        }
      },
      {
        "display_name": "Is Trending",
        "uid": "is_trending",
        "data_type": "boolean",
        "mandatory": false,
        "field_metadata": {
          "description": "Mark as trending post",
          "default_value": false
        }
      },
      {
        "display_name": "View Count",
        "uid": "view_count",
        "data_type": "number",
        "mandatory": false,
        "field_metadata": {
          "description": "Number of views",
          "default_value": 0
        }
      }
    ],
    "options": {
      "title": "title",
      "publishable": true,
      "is_page": true,
      "singleton": false,
      "sub_title": ["excerpt"],
      "url_pattern": "/:title",
      "url_prefix": "/blog/"
    }
  }
}
